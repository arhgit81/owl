<?xml version="1.0" encoding="UTF-8"?>
<template>

    <t t-name="view_inheritance.ResPartnerKanbanView" t-inherit="web.KanbanView"  t-inherit-mode="primary">

        <!-- add buttons -->
        <xpath expr="//button[contains(@class,'o-kanban-button-new')]" position="after">
            <button class="btn btn-primary ms-2" t-on-click="openSalesView" style="width: 120px">View SO</button>
            <button class="btn btn-primary ms-2" t-on-click="openInvoicesView" style="width: 120px">View Invoices</button> 
            <button class="btn btn-primary ms-2" t-on-click="openMeetingView" style="width: 120px">View Meetings</button> <!-- quiz -->
        </xpath>

        <!-- add side bar -->
        <xpath expr="//t[contains(@t-component, 'props.Renderer')]" position="before">
            <div class="p-3 bg-white my_partner_sidebar">
                <h2>Customer Locations</h2>
                <div class="list-group">
                    <t t-foreach="customerLocations" t-as="loc" t-key="loc.state_id[0]">
                        <a href="#" t-on-click="()=>this.selectLocation(loc.state_id)" class="list-group-item">
                            <span t-esc="loc.state_id[1]" />
                            <span t-esc="loc.state_id_count" class="badge bg-primary text-white"/> 
                        </a>
                    </t>
                </div>
            </div>
        </xpath>

        <xpath expr="//Layout" position="attributes">
            <attribute name="className">model.useSampleModel ? 'o_view_sample_data' : '' + 'd-flex'</attribute>
        </xpath>
    </t>
</template>